<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.trafalgar.procalculator.MainActivity">

    <EditText
        android:id="@+id/operando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:textColor="#EEEEEE"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/sumaBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton_naranja"
            android:text="+" />

        <Button
            android:id="@+id/restaBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton_naranja"
            android:text="-" />

        <Button
            android:id="@+id/productoBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton_naranja"
            android:text="X" />

        <Button
            android:id="@+id/divisionBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_naranja"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/n7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="7" />

        <Button
            android:id="@+id/n8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="8" />

        <Button
            android:id="@+id/n9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="9" />

        <Button
            android:id="@+id/acBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_naranja"
            android:text="AC" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/n4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="4" />

        <Button
            android:id="@+id/n5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="5" />

        <Button
            android:id="@+id/n6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton"
            android:text="6" />

        <Button
            android:id="@+id/delBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/boton_naranja"
            android:text="B" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.07">

            <LinearLayout
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/n1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="1" />

                <Button
                    android:id="@+id/n2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="2" />

                <Button
                    android:id="@+id/n3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/puntoBtn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="." />

                <Button
                    android:id="@+id/n0"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="0" />

                <Button
                    android:id="@+id/invertirBtn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/boton"
                    android:text="+/-" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="166dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/button"
                android:layout_width="46dp"
                android:layout_height="127dp"
                android:layout_margin="8dp"
                android:layout_weight="0.13"
                android:background="@drawable/boton_igual"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
